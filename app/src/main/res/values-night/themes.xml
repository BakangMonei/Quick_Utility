    <style name="AppTheme_Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/teal_200</item>
        <item name="colorAccent">@color/blue</item>
