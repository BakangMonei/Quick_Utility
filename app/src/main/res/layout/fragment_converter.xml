<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Input field for entering the value to convert -->
    <EditText
        android:id="@+id/inputValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter value"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        android:padding="10dp"
        android:background="@android:color/white"
        android:layout_marginBottom="20dp"/>

    <!-- Dropdown for selecting the 'from' unit -->
    <Spinner
        android:id="@+id/fromUnitSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <!-- Dropdown for selecting the 'to' unit -->
    <Spinner
        android:id="@+id/toUnitSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <!-- Display the converted result -->
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Converted value will appear here"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="20dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"/>

</LinearLayout>
